<% if @lists.size > 0 %>
    <div class="container">
      <div class="col-xs-12 col-sm-9">
        <div class="jumbotron">
          <h1>Showable Lists</h1>
          <p>
          <table class='table table-hover'>
            <tbody>
            <% @lists.each do |list| %>
                <tr>
                  <td>
                    <%= link_to list.name, list_path(list), class: 'text-muted list' %>
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
          </p>
        </div>
      </div>
    </div>
<% else %>
    <p>No lists to show</p>
<% end %>